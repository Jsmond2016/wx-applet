/* pages/index/index.wxss */
page{
  height: 100%;
  background: #8ED415;
}
.indexContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 1px === 2rpx 在微信中 css 像素和物理像素的区别 */
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  margin: 100rpx 0;
}

.userName{
  font-size: 32rpx;
  font-weight: bold;
  margin: 100rpx 0;
}

.goStudy{
  width: 200rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 28rpx;
  border: 1rpx solid black;
  border-radius: 10rpx;
}
